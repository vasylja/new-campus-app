<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#0065BD" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content" android:id="@+id/lectureText"
			android:textColor="#FFFFFF" android:layout_height="wrap_content"
			android:text="@string/next_lectures" android:singleLine="true" />

		<TextView android:layout_width="fill_parent" android:id="@+id/moduleText"
			android:textColorLink="#FFFFFF" android:layout_height="wrap_content"
			android:text="" android:gravity="right" />
	</LinearLayout>

	<ListView android:background="#FFFFFF" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/listView"
		android:scrollbars="vertical" android:layout_weight="51"
		android:layout_marginBottom="6dip" android:padding="4dip" />

	<ListView android:id="@+id/listView2"
	    android:layout_height="fill_parent" android:layout_width="fill_parent" 
		android:layout_weight="49" android:background="#FFFFFF"
		android:scrollbars="vertical" android:padding="4dip" />
	
</LinearLayout>