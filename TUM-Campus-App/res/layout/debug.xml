<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">

	<LinearLayout android:id="@+id/debugSyncs"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button android:id="@+id/debugSync"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_syncs"/>

		<Button android:id="@+id/debugCafeterias"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_cafeterias"/>

		<Button android:id="@+id/debugCafeteriasMenus"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="@string/debug_cafeterias_menus"/>
	</LinearLayout>

	<LinearLayout android:id="@+id/debugFeeds"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button android:id="@+id/debugFeed"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="@string/debug_feeds" />

		<Button android:id="@+id/debugFeedsItems"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="@string/debug_feeds_items" />

		<Button android:id="@+id/debugLinks"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="@string/debug_links"/>

		<Button android:id="@+id/debugEvents"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="@string/debug_events" />

		<Button android:id="@+id/debugNews"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="@string/debug_news"/>
		
	</LinearLayout>

	<LinearLayout android:id="@+id/debugLecturesAndMore"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button android:id="@+id/debugLectures"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_lectures" />

		<Button android:id="@+id/debugLecturesItems"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_lectures_items" />

		<Button android:id="@+id/debugLocations"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_locations" />

		<Button android:id="@+id/debugTime"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_time" />
		
	</LinearLayout>

	<LinearLayout android:id="@+id/debugMaster"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button android:id="@+id/debugButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/debug_master" />
		
	</LinearLayout>

	<TextView android:id="@+id/debug"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:scrollbars="vertical" />

</LinearLayout>